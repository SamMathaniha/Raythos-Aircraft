    <script>
        // Add JavaScript to handle image preview
        function setupImagePreview(input, previewSelector) {
            input.addEventListener('change', function () {
                var preview = document.querySelector(previewSelector);
                var file = input.files[0];
                var reader = new FileReader();

                reader.onloadend = function () {
                    preview.src = reader.result;
                }

                if (file) {
                    reader.readAsDataURL(file);
                } else {
                    preview.src = "";
                }
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            setupImagePreview(document.querySelector('input[name="Img_1"]'), '.img-preview:nth-of-type(1) img');
            setupImagePreview(document.querySelector('input[name="Img_2"]'), '.img-preview:nth-of-type(2) img');
        });
    </script>
