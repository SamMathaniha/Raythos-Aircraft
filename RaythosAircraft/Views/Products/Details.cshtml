@model RaythosAircraft.Models.Products

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendorAdmin/fontawesome-free/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <style>
        .btn-custom {
            margin-right: 10px;
            border-radius: 10px;
            padding: 10px 20px;
        }
        .square-image {
            width: 100px;
            height: 100px;
        }
       
    </style>

</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-warning sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-icon rotate-n-15"></div>
                <div class="sidebar-brand-text mx-3">Raythos Aerospace</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Navigation Links -->
            <li class="nav-item active">
                <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <!-- Add similar navigation links for other sections -->
            <li class="nav-item active">
                <a class="nav-link" asp-controller="Products" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Product</span>
                </a>
            </li>
                         <li class="nav-item active">
               <a class="nav-link" asp-controller="Inventories" asp-action="Index">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Inventory</span>
               </a>
            </li>

             <li class="nav-item active">
               <a class="nav-link" asp-controller="Orders" asp-action="Index">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Order</span>
               </a>
            </li>
          
             <li class="nav-item active">
               <a class="nav-link" asp-controller="Users" asp-action="Index"> 
                <i class="fas fa-fw fa-tachometer-alt"></i> 
                <span>User</span> 
               </a>
            </li>

               <li class="nav-item active">
               <a class="nav-link" asp-controller="Payments" asp-action="Index"> 
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Payment</span> 
               </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" asp-controller="AppRoles" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span>Roles Management</span>
                </a>
            </li>
            <!-- Add other navigation links here -->
        </ul>

        
   
    
<div id="content-wrapper" class="d-flex flex-column" style="margin-left:3px;"> <!-- Adjust the margin-left value as needed -->
            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <partial name="/Views/Shared/_LoginPartial.cshtml" />

            </nav>
            <!-- End of Topbar -->

    <!-- Main Content -->
    <div id="content">
         
        <!-- Topbar Search -->
<h1>Details</h1>

<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Img_1)
</dt>
<dd class="col-sm-10">
    @if (!string.IsNullOrEmpty(Model.Img_1))
    {
        <img src="@Model.Img_1" alt="Image 1" style="max-width: 300px; margin-left: 10px;" />
    }
    else
    {
        <span>No image available</span>
    }
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Img_2)
</dt>
<dd class="col-sm-10">
    @if (!string.IsNullOrEmpty(Model.Img_2))
    {
        <img src="@Model.Img_2" alt="Image 2" style="max-width: 300px; margin-left: 10px;" />
    }
    else
    {
        <span>No image available</span>
    }
</dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Basic_Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Basic_Price)
        </dd>
        <dt class = "col-sm-2">							
            @Html.DisplayNameFor(model => model.Specifications)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Specifications)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Days)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Days)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>




    <!-- Bootstrap core JavaScript -->
    <script src="~/vendorAdmin/jquery/jquery.min.js"></script>
    <script src="~/vendorAdmin/bootstrap/js/bootstrap.min.js"></script>
    <!-- Core plugin JavaScript -->
    <script src="~/vendorAdmin/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages -->
    <script src="~/js/js/sb-admin-2.min.js"></script>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


</body>
</html>
