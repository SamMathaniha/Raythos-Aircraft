@{
    ViewBag.Title = "Productionstage";
}

@{
    ViewData["Title"] = "Display Data";
    string[] TableHeaders = new string[] {"ID"
      ,"Name"
      ,"Email"
      ,"Address"
      ,"ContactNO"
      ,"AgreementStatus"
      ,"PurchaseDate"
      ,"DeliveryDate"
      ,"Total"
      ,"Status"
      ,"Pass"};

    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendorAdmin/fontawesome-free/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <style>
        .btn-custom {
            margin-right: 10px;
            border-radius: 10px;
            padding: 10px 20px;
        }
        .square-image {
            width: 100px;
            height: 100px;
        }
        .table-container {
            max-width: 800px; /* Adjust the maximum width as needed */
            margin: auto; /* Center the table */
            overflow-x: auto; /* Enable horizontal scrolling */
        }

        .table-fixed-header thead {
            position: sticky;
            top: 0;
            background-color: #343a40; /* Adjust background color as needed */
            color: #ffffff; /* Adjust text color as needed */
        }
    </style>

</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-warning sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-icon rotate-n-15"></div>
                <div class="sidebar-brand-text mx-3">Raythos Aerospace</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
           
            <!-- Add similar navigation links for other sections -->

               <li class="nav-item active">
               <a class="nav-link" asp-controller="CA" asp-action="OrderStage">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Order</span>
               </a>
            </li>

             <li class="nav-item active">
               <a class="nav-link" asp-controller="CA" asp-action="ProductionStage">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Production</span>
               </a>
            </li>

             <li class="nav-item active">
               <a class="nav-link" asp-controller="CA" asp-action="DeliveryStage">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Delivery</span>
               </a>
            </li>

             <li class="nav-item active">
               <a class="nav-link" asp-controller="CA" asp-action="CompletedStage">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Completed</span>
               </a>
            </li>
            <!-- Add other navigation links here -->
        </ul>

        
   
    
<div id="content-wrapper" class="d-flex flex-column" style="margin-left:3px;"> <!-- Adjust the margin-left value as needed -->

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <partial name="/Views/Shared/_LoginPartial.cshtml" />

            </nav>
            <!-- End of Topbar -->

    <!-- Main Content -->
    <div id="content">
                <!-- Topbar Search -->
                <h1>Production-Stage Management</h1>

                <!-- Display the dynamic table -->
                <div class="table">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                @foreach (var header in TableHeaders)
                                {
                                    <th>@header</th>
                                }
                       
                            </tr>
                        </thead>
                    
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@data.OrderId</td>
                                        <td>@data.Name</td>
                                        <td>@data.Email</td>
                                        <td>@data.Address</td>
                                        <td>@data.ContactNo</td>
                                        <td>@data.AgreementStatus</td>
                                        <td>@data.PurchaseDate</td>
                                        <td>@data.DeliveryDate</td>
                                        <td>@data.Total</td>
                                        <td>@data.Status</td>
                                        <td>
                                             <a href="@Url.Action("UpdateToDelivery", new { orderId = data.OrderId })" class="btn btn-primary">Delivery</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="@TableHeaders.Length">No data available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap core JavaScript -->
    <script src="~/vendorAdmin/jquery/jquery.min.js"></script>
    <script src="~/vendorAdmin/bootstrap/js/bootstrap.min.js"></script>
    <!-- Core plugin JavaScript -->
    <script src="~/vendorAdmin/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages -->
    <script src="~/js/js/sb-admin-2.min.js"></script>
</body>
</html>
 